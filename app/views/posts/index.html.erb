<div class="max-w-3xl mx-auto px-6 py-12">
  <h1 class="text-3xl font-semibold">Latest posts</h1>

  <div class="mt-3">
    <%= link_to 'View ranking', :ranking, class: 'text-sm text-gray-500 hover:text-gray-900' %>
  </div>

  <div class="mt-6 space-y-3">
    <% Post.order(:published_at).each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>
